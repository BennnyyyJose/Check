pipeline {
  agent any

  environment {
    registry = "benniyamjose/check"
    registryCredential = "Jenkinsdocker"
    dockerImage = ''
  }

  stages {
    stage('Checkout') {
      steps {
        checkout([
          $class: 'GitSCM',
          branches: [[name: '*/main']],
          userRemoteConfigs: [[url: 'https://github.com/BennnyyyJose/Check.git']]
        ])
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          dockerImage = docker.build("${registry}:${BUILD_NUMBER}")
        }
      }
    }

    stage('Push to DockerHub') {
      steps {
        script {
          docker.withRegistry('', registryCredential) {
            dockerImage.push()
            dockerImage.push('latest')
          }
        }
      }
    }

    stage('Test Run') {
      steps {
        sh 'docker run -d -p 5000:5000 ${registry}:${BUILD_NUMBER}'
      }
    }
  }

  post {
    always {
      cleanWs()
    }
  }
}
